<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        width="100%" height="100%">

    <fx:Metadata>[HostComponent("view.takeTalon.TakeTalonComponent")]</fx:Metadata>


    <s:BorderContainer id="takeTicket"
                       enabled="{hostComponent.isTicketButtonActive}"
                       width="100%" height="100%"
                       cornerRadius="12" borderColor="black" borderWeight="3"
                       backgroundColor="{hostComponent.ticketBackground}" dropShadowVisible="{hostComponent.shadowVisible}">
        <s:Label id="ticketLabel"
                 verticalCenter="0" horizontalCenter="0"
                 fontSize="{hostComponent.ticketTextFontSize}"
                 fontFamily="{hostComponent.ticketFont}"
                 color="{hostComponent.ticketFontColor}"
                 text="{hostComponent.takeTicketText}"
                textAlign="center"/>
    </s:BorderContainer>

</s:Skin>
